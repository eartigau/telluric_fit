# Copy hotstars (flattened - no subdirectories)
# Hot star list from telluric_config.yaml
HOT_STARS=(15PEG 17PEG 23LMI 24LYN 31CAS 33LYN 51DRA 59PEG 74PSCB 82UMA \
           BETSER CHICAP ETAPYX GAMSCT GAMTRI HD130917 HD159170 HD195094 \
           HR1314 HR1832 HR1903 HR2180 HR2209 HR3117 HR3131 HR3314 HR4023 \
           HR4467 HR4468 HR4687 HR4722 HR4889 HR5107 HR5671 HR6025 HR6743 \
           HR7590 HR7830 HR806 HR8489 HR8709 HR9098 IOTCYG LLEO OMICAPA \
           PHILEO PI02ORI ZETLEP ZETVIR)

SRC="/home/eartigau/projects/rrg-rdoyon/nirps/etienne_temporary/objects"
DST="/home/eartigau/projects/rrg-rdoyon/eartigau/tapas/test_fit/hotstars_NIRPS"

mkdir -p "$DST"

for star in "${HOT_STARS[@]}"; do
    if [ -d "$SRC/$star" ]; then
        echo "Copying $star..."
        rsync -av "$SRC/$star/"*_e2dsff_A.fits "$DST/" 2>/dev/null || true
    fi
done

echo "Done syncing hot stars to $DST"